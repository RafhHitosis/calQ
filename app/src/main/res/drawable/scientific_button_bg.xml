<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/scientific_button_pressed" />
            <corners android:radius="12dp" />
            <stroke android:width="1dp" android:color="@color/scientific_text_color" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/scientific_button_color" />
            <corners android:radius="12dp" />
            <stroke android:width="1dp" android:color="@color/scientific_text_color" />
        </shape>
    </item>
</selector>